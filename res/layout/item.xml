<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/item_list_background"
    android:layout_marginTop="10dp" >

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:text="TextView"
        style="@style/StatisticsDateHeaderStyle">
    </TextView>

    <TextView
        android:id="@+id/durationGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginLeft="10dp"
        android:text="TextView"
        style="@style/StatisticsTextStyle">
    </TextView>

    <TextView
        android:id="@+id/k_factor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="10dp"
        android:text="TextView"
        style="@style/StatisticsTextStyle">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/accountTop100"
        android:textSize="@dimen/account_value_top100_text_size" />

</FrameLayout>