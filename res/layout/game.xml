            android:layout_weight="1.2"
            style="@style/GameTextStyle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_weight="1"
            style="@style/GameTextStyle" />

    </LinearLayout>

    <LinearLayout
